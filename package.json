{
  "name": "YourLibraryName",
  "version": "1.0.0",
  "main": "dist/bundle.common.js",
  "module": "dist/bundle.esm.js",
  "unpkg": "dist/bundle.min.js",
  "keywords": [
    "rollup",
    "reasonml",
    "starter"
  ],
  "author": "Leo Hui <leohxj@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "bsb -clean-world",
    "bsb-watch": "bsb -w",
    "bsb-build": "bsb -make-world",
    "dev": "cross-env NODE_ENV=development rollup -w -c rollup.config.dev.js",
    "build": "rimraf dist && cross-env NODE_ENV=production rollup -c rollup.config.prod.js",
    "test": "npm run bsb-build && jest",
    "cz": "git-cz"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "files": [
    "src",
    "dist/*.js"
  ],
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^5.2.8",
    "@commitlint/config-conventional": "^5.2.3",
    "@glennsl/bs-jest": "^0.3.2",
    "bs-platform": "^2.1.0",
    "commitizen": "^2.9.6",
    "commitlint-config-cz": "^0.7.0",
    "cross-env": "^5.1.3",
    "cz-customizable": "^5.2.0",
    "husky": "^0.15.0-beta.16",
    "jest": "^22.0.4",
    "lint-staged": "^6.0.0",
    "prettier": "^1.9.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.53.3",
    "rollup-plugin-alias": "^1.4.0",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-filesize": "^1.5.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-serve": "^0.4.2",
    "rollup-plugin-uglify": "^2.0.1",
    "uglify-es": "^3.3.4"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "jest": {
    "roots": [
      "lib/js/__tests__"
    ]
  }
}
